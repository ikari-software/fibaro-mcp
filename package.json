{
  "name": "fibaro-mcp",
  "version": "2.0.0",
  "description": "Model Context Protocol server for Fibaro Home Center integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "fibaro-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "QUICKSTART.md",
    "EXAMPLES.md",
    "FEATURES.md",
    "LUA_MANAGEMENT.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "fibaro",
    "home-automation",
    "smart-home"
  ],
  "author": "Cezar \"ikari\" Pokorski <_@ikari.software>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ikari-software/fibaro-mcp.git"
  },
  "homepage": "https://github.com/ikari-software/fibaro-mcp#readme",
  "bugs": {
    "url": "https://github.com/ikari-software/fibaro-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/luaparse": "^0.2.13",
    "@types/nock": "^10.0.3",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^4.0.16",
    "c8": "^10.1.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "luaparse": "^0.3.1",
    "nock": "^14.0.10",
    "prettier": "^3.7.4",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  }
}
